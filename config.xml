<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hallein</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="resources/screen/android/icon.png" />
        <icon density="mdpi" src="resources/screen/android/icon.png" />
        <icon density="hdpi" src="resources/screen/android/icon.png" />
        <icon density="xhdpi" src="resources/screen/android/icon.png" />
        <splash density="port-ldpi" src="resources/screen/android/splash.png" />
        <splash density="port-mdpi" src="resources/screen/android/splash.png" />
        <splash density="port-hdpi" src="resources/screen/android/splash.png" />
        <splash density="port-xhdpi" src="resources/screen/android/splash.png" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="true" />
    <engine name="android" spec="~6.1.2" />
    <plugin name="com.telerik.plugins.nativepagetransitions" spec="~0.6.5" />
    <plugin name="cordova-plugin-android-permissions" spec="~0.10.0" />
    <plugin name="cordova-plugin-app-preferences" spec="~0.99.3" />
    <plugin name="cordova-plugin-x-toast" spec="~2.6.0" />
    <plugin name="net.ekuwang.cordova.plugin.statusbar" spec="https://github.com/ekuwang/cordova-plugin-statusbar.git" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.1" />
    <plugin name="org.loicknuchel.cordova.deviceaccounts" spec="https://github.com/loicknuchel/cordova-device-accounts.git" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications" />
</widget>
